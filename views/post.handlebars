<!-- This template includes hardcoded data. In future lessons, you will be rendering data dynamically. -->

<div class="menu-container">
  <div class="card-header col-md-10">
    <h2>
      📖 Read Your Latest Blog Posts... 🍩
    </h2>
  </div>

{{#each post}}

<div class="card text-white bg-info w-50 mx-auto border-secondary m-3 ">
  <div class="card-body">
    <h5 class="card-title">{{this.post_title}}</h5>
    <p class="card-text">{{this.post_content}}</p>
    <a href="/{{id}}" class="btn btn-light">Read More...</a>
  </div>
</div>

{{/each}}
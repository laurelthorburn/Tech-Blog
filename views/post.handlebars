<!-- This template includes hardcoded data. In future lessons, you will be rendering data dynamically. -->

<div class="menu-container">
  <div class="card-header col-md-10">
    <h2>
      📖 Read THIS Latest Blog Posts... 🍩 where am i???????
    </h2>
  </div>

<div class="card text-white bg-info w-50 mx-auto border-secondary m-3 ">
  <div class="card-body">
    <h5 class="card-title">{{post.post_title}}</h5>
        <p>Author: {{loud post.user.username}} Date: {{format_date post.createdAt}}</p>
    <p class="card-text">{{post.post_content}}</p>
  </div>
</div>

{{#each post.comments as |post|}}
{{debug post}}
<div class="card text-white bg-secondary w-50 mx-auto border-secondary m-3 ">
  <div class="card-body">
    <h5 class="card-title">{{loud user.username}} on {{format_date createdAt}}</h5>
    <p class="card-text">{{comment_content}}</p>
  </div>
</div>
{{/each}}


<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">write a response:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
      </div>
    </form>
  </div>

<script src="/js/comment.js"></script>